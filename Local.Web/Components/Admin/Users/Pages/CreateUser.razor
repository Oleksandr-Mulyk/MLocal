<PageTitle>Create User</PageTitle>

<h3>Create User</h3>

<EditForm Model="userViewModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <InputText id="username" class="form-control" @bind-Value="userViewModel.UserName" />
        <ValidationMessage For="@(() => userViewModel.UserName)" />
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <InputText id="email" class="form-control" @bind-Value="userViewModel.Email" />
        <ValidationMessage For="@(() => userViewModel.Email)" />
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="userViewModel.Password" />
        <ValidationMessage For="@(() => userViewModel.Password)" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>
